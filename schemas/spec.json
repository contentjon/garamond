{
    "name":        "api-doc",
    "description": "A schema for API documentation",
    "type":        "object",
    "properties": {
        "type": {
            "type":     "string",
            "enum":     ["hierarchy", "function"],
            "required": true
        },
        "tag": {
            "type": "string",
            "description":
              "An additional tag field to annotate domain information about a documentation element"
        },
        "name": {
            "type":     "string",
            "required": true
        },
        "doc": {
            "type":     "string",
            "required": true
        },
        "parameters": {
            "type": "array",
            "dependencies" : {
                "type": {
                    "type": "string",
                    "enum": ["function"]
                }
            }
        }
    }
}

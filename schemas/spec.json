{
    "name":        "api-doc",
    "description": "A schema for API documentation",
    "type":        "object",
    "properties": {
        "type": {
            "type":     "string",
            "enum":     ["hierarchy", "function", "field"],
            "required": true
        },
        "domain": {
            "type": "string",
            "description":
              "An additional tag field to annotate domain information about a documentation element."
        },
        "name": {
            "type":     "string",
            "required": true
        },
        "source": {
            "type": "object",
            "description": "The source of the documented piece of code",
            "properties": {
                "file": { "type": "string", "required": true },
                "line": { "type": "integer" }
            }
        },
        "doc": {
            "type":     "string",
            "required": true
        },
        "parameters": {
            "type": "array",
            "description":
              "An array of parameters to a documentation item of type function",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string", "required":true },
                    "doc":  { "type": "string", "required":true }
                }
            }
        }
    },
    "dependencies" : {
        "parameters": {
            "properties": {
                "type": {"enum": ["function"]}
            }
        }
    },
    "additionalProperties":false
}
